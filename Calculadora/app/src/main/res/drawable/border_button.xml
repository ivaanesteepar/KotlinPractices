<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color de fondo del botón -->
    <solid android:color="#e0f7fa" /> <!-- Cambia el color según prefieras -->

    <!-- Definición del borde -->
    <stroke
            android:width="2dp"
            android:color="#000000" /> <!-- Color del borde -->

    <!-- Bordes redondeados (opcional) -->
    <corners android:radius="15dp" /> <!-- Radio del borde redondeado -->

    <!-- Padding opcional -->
    <padding
            android:left="4dp"
            android:top="4dp"
            android:right="4dp"
            android:bottom="4dp" />
</shape>
